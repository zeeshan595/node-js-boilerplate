{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": false,
    "strict": false,
    "skipLibCheck": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
